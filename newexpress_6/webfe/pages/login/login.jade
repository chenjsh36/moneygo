extends layout
block styles
	link(rel="stylesheet", href="/static/pages/login/login.css")

block content
	.ui.middle.aligned.center.aligned.grid
		if (authenticated)
			p welcome back, #{username}
		else 
			.column
				h2.ui.header Log-in to your account 
				if (success !== null && success == false)
					form#login-form.ui.inverted.large.form.error(action="/user/login", method="POST")
						.ui.stacked.segment
							.field
								.ui.left.icon.input
									i.user.icon
									input(type="text" name="username" placeholder="Account name")
							.field
								.ui.left.icon.input
									i.lock.icon
									input(type="password" name="password" placeholder="Password")
							.ui.blue.submit.button Submit
							.ui.error.message
								ul.list
									li #{err}						
				else
					form#login-form.ui.inverted.large.form(action="/user/login", method="POST")
						.ui.stacked.segment
							.field
								.ui.left.icon.input
									i.user.icon
									input(type="text" name="username" placeholder="Account name")
							.field
								.ui.left.icon.input
									i.lock.icon
									input(type="password" name="password" placeholder="Password")
							.ui.blue.submit.button Submit
							.ui.error.message

								
			
block footer

block scripts
	script(src="/static/pages/login/login.js")